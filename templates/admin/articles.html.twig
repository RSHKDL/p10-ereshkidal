{% extends 'admin/index.html.twig' %}

{% block title %}Dashboard - Manage Articles{% endblock %}

{% block admin_body %}
    <h2>Manage Articles ({{ pagination.totalItemCount }})</h2>
    <form>
        <div class="input-group mb-3">
            <input type="text" name="q" class="form-control" placeholder="Search..." value="{{ app.request.query.get('q') }}">
            <div class="input-group-append">
                <button type="submit"
                        class="btn btn-dark">
                    <span class="fa fa-search"></span>
                </button>
            </div>
        </div>
    </form>
    <table class="table table-striped">
        <thead>
        <tr>
            <th scope="col">Title</th>
            <th scope="col">Author</th>
            <th scope="col">Created</th>
            <th scope="col">Published</th>
            <th scope="col">Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for article in pagination %}
            <tr>
                <td><a href="{{ path('article_show', {slug: article.slug}) }}">{{ article.title }}</a></td>
                <td>{{ article.author }}</td>
                <td>{{ article.createdAt|date }}</td>
                <td>
                    <span class="fas fa-{{ article.isPublished ? 'check' : 'times' }}"></span>
                </td>
                <td>
                    <a href="{{ path('article_update', {id: article.id}) }}" class="btn btn-primary btn-sm" title="Update article"><span class="fas fa-edit" aria-hidden="true"></span></a>
                    <button type="button" class="btn btn-danger btn-sm" data-toggle="modal" data-target="#deleteArticle-{{ article.id }}" title="Delete article">
                        <span class="fas fa-trash" aria-hidden="true"></span>
                    </button>
                    {{ include('admin/_article_delete_modal.html.twig', {article: article}) }}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4" class="text-center">No result found.</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    {{ knp_pagination_render(pagination) }}
{% endblock %}
