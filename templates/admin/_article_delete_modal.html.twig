<!-- Modal -->
<div class="modal fade" id="deleteArticle-{{ article.id }}" tabindex="-1" role="dialog" aria-labelledby="deleteArticleLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="deleteArticleLabel">Confirm article suppression</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <p>You are about to delete the article: {{ article.title }}</p>
                <p>Are you sure ? This action is final.</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <a href="{{ path('article_delete', {id: article.id}) }}" class="btn btn-danger">Delete</a>
            </div>
        </div>
    </div>
</div>
