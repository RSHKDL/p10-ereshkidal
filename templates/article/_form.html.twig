{{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
    {{ form_row(form.title) }}
    {% if is_granted('ROLE_ADMIN') %}
        {{ form_row(form.author) }}
    {% endif %}
    {% set status = '' %}
    {% set class = 'd-none' %}
    {% if form.publishOptions is defined %}
        {{ form_row(form.publishOptions) }}
        {% set status = form.children.publishOptions.vars.value %}
    {% endif %}
    {% if status == 'scheduled' %}
        {% set class = '' %}
    {% endif %}
    <div class="js-publishedAt-field {{ class }}">
        {{ form_row(form.publishedAt) }}
    </div>
    {{ form_row(form.content) }}
    <button class="btn btn-lg btn-primary mt-3" type="submit">
        {{ btn_text }}
    </button>
{{ form_end(form) }}
