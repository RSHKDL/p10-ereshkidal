{% extends 'base.html.twig' %}

{% block title %}Profile{% endblock %}

{% block body %}
    <div class="container">
        <div class="row mb-3 user-menu-container square">
            <div class="col-md-12 user-details">
                <main class="row">
                    <div class="col-md-2 no-pad">
                        <div class="user-image">
                            <img src="{{ user.getAvatarUrl() }}" class="img-responsive thumbnail" alt="user avatar">
                        </div>
                    </div>
                    <div class="col-md-10 no-pad">
                        <div class="user-pad">
                            <h3>{{ user.username }}</h3>
                            <h4 class="white"><span class="fab fa-twitter" aria-hidden="true"></span> {{ user.getTwitterUsername }}</h4>
                            <a class="btn btn-primary" href="#">
                                <span class="fas fa-paper-plane" aria-hidden="true"></span> Send message
                            </a>
                            <a class="btn btn-success" href="#">
                                <span class="fas fa-handshake" aria-hidden="true"></span> Cheer
                            </a>
                            <a class="btn btn-danger" href="#">
                                <span class="fas fa-exclamation-triangle" aria-hidden="true"></span> Report
                            </a>
                        </div>
                    </div>
                </main>
                <aside class="row overview">
                    <div class="col-md-4 user-pad text-center">
                        <h3>COMMENTS</h3>
                        <h4>184</h4>
                    </div>
                    <div class="col-md-4 user-pad text-center">
                        <h3>ARTICLES WRITTEN</h3>
                        <h4>1,910</h4>
                    </div>
                    <div class="col-md-4 user-pad text-center">
                        <h3>LIKES</h3>
                        <h4>3,892</h4>
                    </div>
                </aside>
            </div>
        </div>
    </div>
{% endblock %}
